{
  "include": ["app/"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@components-app/*": ["app/src/components/*"],
      "@components-admin/*": ["app/adminSettings/components/*"],
      "@components-personal/*": ["app/adminSettings/components/*"],
      "@store-admin/*": ["app/adminSettings/store/*"],
      "@store-personal/*": ["app/personalSettings/store/*"],
      "@store-app/*": ["app/src/store/*"],
      "@ts/*": ["app/common/ts/*"],
      "@utils/*": ["app/common/utils/*"],
      "@config/*": ["app/common/config/*"],
      "@models/*": ["app/common/models/*"],
      "@common-components/*": ["app/common/components/*"],


    },
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
